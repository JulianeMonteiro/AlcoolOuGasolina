<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="156dp"
            android:layout_height="73dp"
            android:text="Álcool ou Gasolina"
            android:textSize="30sp"
            android:id="@+id/txtTitulo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.831"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saiba a melhor opção de abastecimeto do seu carro"
            android:textSize="15sp"
            android:id="@+id/txtSubTitulo"
            app:layout_constraintTop_toBottomOf="@id/txtTitulo"
            android:layout_marginTop="104dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.531"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço álcool ex 1.90"
            android:textSize="12sp"
            android:id="@+id/txtAlcool"
            app:layout_constraintTop_toBottomOf="@id/txtSubTitulo"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="@id/txtSubTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="16"
            android:id="@+id/txtValorAlcool"
            app:layout_constraintTop_toBottomOf="@id/txtSubTitulo"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="@id/txtSubTitulo"
            app:layout_constraintEnd_toEndOf="@id/txtSubTitulo"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Preço gasolina ex 1.90"
            android:textSize="12sp"
            android:id="@+id/txtGasolina"
            app:layout_constraintTop_toBottomOf="@id/txtSubTitulo"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="@id/txtSubTitulo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="16"
            android:id="@+id/txtValorGasolina"
            app:layout_constraintTop_toBottomOf="@id/txtSubTitulo"
            android:layout_marginTop="100dp"
            app:layout_constraintStart_toStartOf="@id/txtSubTitulo"
            app:layout_constraintEnd_toEndOf="@id/txtSubTitulo"
            app:layout_constraintHorizontal_bias="0.0"/>

    <Button
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:id="@+id/btnCalcular"
            android:textSize="18sp"
            android:backgroundTint="#D1CCCC"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="290dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Melhor utilizar: "
            android:textSize="15sp"
            android:id="@+id/txtResultado"
            app:layout_constraintTop_toBottomOf="@id/txtValorGasolina"
            android:layout_marginTop="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.477"/>
    <ImageView
            android:layout_width="148dp"
            android:layout_height="103dp"
            app:srcCompat="@drawable/ag"
            android:id="@+id/imageView"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toTopOf="@+id/txtTitulo" app:layout_constraintHorizontal_bias="0.06"
            app:layout_constraintVertical_bias="0.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>